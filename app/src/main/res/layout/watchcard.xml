<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="12dp"

        android:background="@drawable/small_card_gradient"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch &amp; Win"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch video win \n rewards!"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            >

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="bottom"
                android:layout_width="88dp"
                android:layout_height="80dp"
                android:rotation="20"
                android:backgroundTint="#C6B9FF"
                android:background="@drawable/small_card_gradient"
                android:layout_marginEnd="-3dp"
                android:layout_marginBottom="-25dp"
                android:gravity="top|start">

                <ImageView
                    android:layout_width="78dp"
                    android:layout_height="68dp"
                    android:rotation="-20"
                    android:src="@drawable/kawaii" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:backgroundTint="#FFE899"
        android:background="@drawable/small_card_gradient"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow us"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow &amp; win \nrewards"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            >

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="bottom"
                android:layout_width="88dp"
                android:layout_height="80dp"
                android:rotation="20"
                android:backgroundTint="#FFF9E5"
                android:background="@drawable/small_card_gradient"
                android:layout_marginEnd="-3dp"
                android:layout_marginBottom="-25dp"
                android:gravity="top|start">

                <ImageView
                    android:layout_width="78dp"
                    android:layout_height="68dp"
                    android:rotation="-20"
                    android:src="@drawable/star" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
